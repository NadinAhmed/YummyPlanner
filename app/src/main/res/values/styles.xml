<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="CustomTextInput" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <!-- border -->
        <item name="boxStrokeColor">@color/secondaryTextColor</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="boxStrokeWidthFocused">2dp</item>

        <!-- border radius-->
        <item name="boxCornerRadiusTopStart">24dp</item>
        <item name="boxCornerRadiusTopEnd">24dp</item>
        <item name="boxCornerRadiusBottomStart">24dp</item>
        <item name="boxCornerRadiusBottomEnd">24dp</item>

        <!-- Hint -->
        <item name="hintEnabled">false</item>
        <item name="hintTextAppearance">@style/TextAppearance.AppCompat.Small</item>

        <!-- Start Icon -->
        <item name="startIconTint">@color/secondaryTextColor</item>
        <item name="maxLines">1</item>
        <item name="boxBackgroundColor">@color/itemsBackgroundColor</item>
        <item name="boxBackgroundMode">outline</item>
    </style>

    <style name="PrimaryFilledButton" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>

        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/plus_jakarta_sans_bold</item>

        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>

        <item name="cornerRadius">24dp</item>
    </style>

    <style name="SocialOutlinedButton" parent="Widget.Material3.Button.OutlinedButton.Icon">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>

        <item name="android:backgroundTint">@color/itemsBackgroundColor</item>
        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="android:fontFamily">@font/plus_jakarta_sans_bold</item>

        <item name="cornerRadius">24dp</item>
        <item name="strokeColor">@color/borderColor</item>
        <item name="strokeWidth">2dp</item>

        <item name="iconTint">@null</item>
    </style>

    <style name="OutlinedButton" parent="Widget.Material3.Button.OutlinedButton.Icon">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>

        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/secondaryTextColor</item>
        <item name="android:fontFamily">@font/plus_jakarta_sans_bold</item>

        <item name="cornerRadius">24dp</item>
        <item name="strokeColor">@color/borderColor</item>
        <item name="strokeWidth">2dp</item>

        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
    </style>

    <style name="MyNavBarStyle" parent="Widget.Material3.BottomNavigationView">
        <item name="itemActiveIndicatorStyle">@style/MyActiveIndicator</item>
    </style>

    <style name="MyActiveIndicator" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">@color/itemRippleEffect</item>
        <item name="shapeAppearance">@style/RoundedIndicator</item>
    </style>

    <style name="RoundedIndicator" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>

    <style name="CustomDatePickerTheme" parent="Theme.MaterialComponents.DayNight.Dialog">
        <!-- Header color -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Background color -->
        <item name="android:windowBackground">@color/itemsBackgroundColor</item>

        <!-- Button text color -->
        <item name="android:textColorPrimary">@color/primaryTextColor</item>

        <!-- Control color - for buttons and selectors -->
        <item name="colorAccent">@color/primaryColor</item>
    </style>
</resources>
